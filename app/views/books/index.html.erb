<nav>
  <h1>Books</h1>
  <table class = "table">
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</nav>
<main>
<h2>New Book</h2>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |messages| %>
      <li><%= messages %></li>
    <% end %>
  </ul>
<% end %>
<% if @book.errors.any? %>
  <div class="field_with_errors">
    <p>title</p>
    <%= f.text_field :title %>
  </div>
<% else %>
  <div class="field">
    <p>title</p>
    <%= f.text_field :title %>
  </div>
<% end %>
<% if @book.errors.any? %>
  <div class="field_with_errors">
  <p>body</p>
  <%= f.text_area :body %>
  </div>
<% else %>
  <div class="field">
  <p>body</p>
  <%= f.text_area :body %>
</div>
<% end %>
<div class = "action">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
</main>