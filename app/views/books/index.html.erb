<h1>Books</h1>
<% @books.each do |book| %>
<p>title</p>
<span><%= book.title %></span>
<p>body</p>
<span><%= book.body %></span>
<%= link_to show, book_path(book.id) %>
<%= link_to edit, edit_book_path(book.id) %>
<% end %>

<h2>New Book</h2>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
<p>title</p>
<%= f.text_field :title %>
<P>body</P>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>